<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>de.dfki.cos.basys</groupId>
		<artifactId>clients-v3</artifactId>
		<version>0.5.0-SNAPSHOT</version>
		<relativePath>../..</relativePath>
	</parent>

	<artifactId>model-part2-java-client-v3</artifactId>
	<name>model-part2-java-client-v3</name>
	<packaging>jar</packaging>
	<properties>
		
		<openapitools.version>7.2.0</openapitools.version>
		<!--TODO-->
		<jakarta-annotation.version>2.1.0</jakarta-annotation.version>

		<generated.folder>src/generated</generated.folder>
		<openapi.folder.name>model-part2</openapi.folder.name>

		<openapi.input.name>api.yaml</openapi.input.name>
		<openapi.output.name>api.yaml</openapi.output.name>
		<openapi.patch.name>patch.yaml</openapi.patch.name>

		<openapi.base.folder>${project.basedir}/../../open-api</openapi.base.folder>

		<openapi.input.path>
			${openapi.base.folder}/${openapi.folder.name}/${openapi.input.name}</openapi.input.path>
		<openapi.patch.path>
			${openapi.base.folder}/${openapi.folder.name}/${openapi.patch.name}</openapi.patch.path>

		<openapi.result.folder>${project.basedir}/openapi</openapi.result.folder>
		<openapi.result.path>${openapi.result.folder}/${openapi.output.name}</openapi.result.path>
	</properties>

	<build>
		<sourceDirectory>${generated.folder}/java</sourceDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<configuration>
					<filesets>
						<fileset>
							<directory>${project.basedir}/${generated.folder}</directory>
							<excludes>
								<exclude>**/.gitkeep</exclude>
							</excludes>
							<followSymlinks>false</followSymlinks>
						</fileset>
						<fileset>
							<directory>${openapi.result.folder}</directory>
							<excludes>
								<exclude>**/.gitkeep</exclude>
							</excludes>
							<followSymlinks>false</followSymlinks>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
			<plugin>
				<groupId>de.dfki.cos.basys.common</groupId>
				<artifactId>jsonpatch-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>initialize</phase>
						<goals>
							<goal>jsonpatch-maven-plugin</goal>
						</goals>
						<configuration>
							<input>${openapi.input.path}</input>
							<patch>${openapi.patch.path}</patch>
							<output>${openapi.result.path}</output>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>initialize</phase>
						<configuration>
							<target>
								<replace
									token="https://api.swaggerhub.com/domains/Plattform_i40/Part1-MetaModel-Schemas/V3.0.1#"
									value="../../model-part1/openapi/api.yaml#"
									file="${openapi.result.path}">
								</replace>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.openapitools</groupId>
				<artifactId>openapi-generator-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<generatorName>java</generatorName>
							<library>native</library>
							<inputSpec>${openapi.result.path}</inputSpec>
							<output>${project.basedir}/${generated.folder}</output>
							<packageName>de.dfki.basys.clients.model</packageName>
							<modelPackage>de.dfki.basys.clients.model.v2</modelPackage>
							<generateModels>true</generateModels>
							<generateApis>true</generateApis>
							<generateApiTests>false</generateApiTests>
							<generateModelDocumentation>false</generateModelDocumentation>
							<generateModelTests>false</generateModelTests>
							<generateApiDocumentation>false</generateApiDocumentation>
							<generateSupportingFiles>true</generateSupportingFiles>
							<skipOperationExample>true</skipOperationExample>
							<supportingFilesToGenerate>
								AbstractOpenApiSchema.java</supportingFilesToGenerate>
							<modelsToGenerate>
								SubmodelElementValue,SubmodelElementListValue,AssetKind,ProtocolInformationSecurityAttributes,PagedResultPagingMetadata,PagedResult,AnnotatedRelationshipElementMetadata,AnnotatedRelationshipElementValue,AssetAdministrationShellDescriptor,AssetAdministrationShellMetadata,BaseOperationResult,BasicEventElementMetadata,BasicEventElementValue,BlobMetadata,BlobValue,BooleanValue,CapabilityMetadata,Descriptor,Endpoint,EntityMetadata,EntityValue,ExecutionState,FileValue,FileMetadata,GetAssetAdministrationShellDescriptorsResult,GetAssetAdministrationShellsMetadataResult,GetAssetAdministrationShellsResult,GetConceptDescriptionsResult,GetPackageDescriptionsResult,GetPathItemsResult,GetReferencesResult,GetSubmodelDescriptorsResult,GetSubmodelElementsMetadataResult,GetSubmodelElementsResult,GetSubmodelsMetadataResult,GetSubmodelsResult,GetSubmodelsValueResult,Message,MultiLanguagePropertyMetadata,MultiLanguagePropertyValue,NumberValue,OperationHandle,OperationMetadata,OperationRequest,OperationRequestValueOnly,OperationResult,OperationResultValueOnly,PagedResult,PackageDescription,PathItem,PropertyMetadata,PropertyValue,ProtocolInformation,RangeMetadata,RangeValue,ReferenceElementMetadata,ReferenceElementValue,ReferenceValue,RelationshipElementMetadata,RelationshipElementValue,Result,ServiceDescription,SpecificAssetIdValue,StringValue,SubmodelDescriptor,SubmodelElementAttributes,SubmodelElementListMetadata,SubmodelElementCollectionMetadata,SubmodelElementCollectionValue,SubmodelElementMetadata,SubmodelMetadata,SubmodelValue,ValueOnly,GetSubmodelElementsValueResult</modelsToGenerate>
							<importMappings>
								AssetKind=de.dfki.basys.clients.model.v1.AssetKind
								,ReferenceTypes=de.dfki.basys.clients.model.v1.ReferenceTypes
								,Key=de.dfki.basys.clients.model.v1.Key
								,AdministrativeInformation=de.dfki.basys.clients.model.v1.AdministrativeInformation
								,Extension=de.dfki.basys.clients.model.v1.Extension
								,LangStringNameType=de.dfki.basys.clients.model.v1.LangStringNameType
								,LangStringTextType=de.dfki.basys.clients.model.v1.LangStringTextType
								,SpecificAssetId=de.dfki.basys.clients.model.v1.SpecificAssetId
								,Reference=de.dfki.basys.clients.model.v1.Reference
								,Direction=de.dfki.basys.clients.model.v1.Direction
								,Qualifier=de.dfki.basys.clients.model.v1.Qualifier
								,StateOfEvent=de.dfki.basys.clients.model.v1.StateOfEvent
								,ModelType=de.dfki.basys.clients.model.v1.ModelType
								,ModellingKind=de.dfki.basys.clients.model.v1.ModellingKind
								,EmbeddedDataSpecification=de.dfki.basys.clients.model.v1.EmbeddedDataSpecification
								,DataTypeDefXsd=de.dfki.basys.clients.model.v1.DataTypeDefXsd
								,ReferableAllOfIdShort=de.dfki.basys.clients.model.v1.ReferableAllOfIdShort
								,EntityType=de.dfki.basys.clients.model.v1.EntityType
								,OperationVariable=de.dfki.basys.clients.model.v1.OperationVariable
								,SubmodelElement=de.dfki.basys.clients.model.v1.SubmodelElement
								,Submodel=de.dfki.basys.clients.model.v1.Submodel
								,ConceptDescription=de.dfki.basys.clients.model.v1.ConceptDescription
								,AssetAdministrationShell=de.dfki.basys.clients.model.v1.AssetAdministrationShell
							</importMappings>

							<configOptions>
								<java8>true</java8>
								<dateLibrary>java8</dateLibrary>
								<sourceFolder>java</sourceFolder>
								<useJakartaEe>true</useJakartaEe>
							</configOptions>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>

		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-plugin-plugin</artifactId>
					<version>3.9.0</version>
				</plugin>
				<plugin>
					<groupId>com.google.code.maven-replacer-plugin</groupId>
					<artifactId>maven-replacer-plugin</artifactId>
					<version>1.4.1</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.openapitools</groupId>
			<artifactId>jackson-databind-nullable</artifactId>
		</dependency>
		<dependency>
			<groupId>jakarta.annotation</groupId>
			<artifactId>jakarta.annotation-api</artifactId>
		</dependency>
		<dependency>
			<groupId>jakarta.validation</groupId>
			<artifactId>jakarta.validation-api</artifactId>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.datatype</groupId>
			<artifactId>jackson-datatype-jsr310</artifactId>
		</dependency>
		<dependency>
			<groupId>com.google.code.findbugs</groupId>
			<artifactId>jsr305</artifactId>
		</dependency>
		<dependency>
			<groupId>javax.annotation</groupId>
			<artifactId>javax.annotation-api</artifactId>
		</dependency>
		<dependency>
			<groupId>de.dfki.cos.basys</groupId>
			<artifactId>model-part1-java-client-v3</artifactId>
			<version>0.5.0-SNAPSHOT</version>
		</dependency>
	</dependencies>
</project>
